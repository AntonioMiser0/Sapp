<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/zaedit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/imeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Kat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sena">

        <TextView
            android:id="@+id/ime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bold"
            android:text="Andrija"
            android:textColor="@color/bijela"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/godine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:paddingStart="20dp"
            android:text="24"
            android:textColor="@color/bijela"
            android:textSize="30sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:background="@drawable/senka"
        android:orientation="horizontal"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="@+id/event_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sena" />


    <LinearLayout
        android:id="@+id/Kat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/imeLayout">

        <TextView
            android:id="@+id/kategorije"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Kategorije"
            android:textColor="#FFFFFF"
            android:textColorHint="#D3D3D3"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/swpcards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/regular"
            android:textColor="#B3FFFFFF"
            android:textColorHint="#D3D3D3"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/swpcards1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Opis"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#B3FFFFFF"
        android:textColorHint="#D3D3D3"
        android:textSize="20sp"
        android:translationZ="1dp"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="1dp"
            android:maxWidth="40dp"
            app:tint="#B3FFFFFF"
            android:src="@drawable/lokacija" />

        <TextView
            android:id="@+id/lokacija"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/regular"
            android:hint="Lokacija"
            android:textColorHint="#D3D3D3"
            android:textColor="#B3FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/vrijeme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/regular"
            android:hint="Datum"
            android:textColorHint="#D3D3D3"
            android:textColor="#B3FFFFFF"
            android:textSize="25sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/event_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="@drawable/imgshape"
        android:translationZ="-2dp"
        app:layout_constraintBottom_toTopOf="@+id/swpcards1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />
</androidx.constraintlayout.widget.ConstraintLayout>