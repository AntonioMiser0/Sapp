<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/banner_event"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:text="Saap"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Location"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:text="LOKACIJA:"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_event" />

    <EditText
        android:id="@+id/location"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Upisi lokaciju"
        android:inputType="textPostalAddress"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_event"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:text="DATUM:"
        android:textSize="30dp"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="208dp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Upisi datum"
        android:inputType="date"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Picture"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="SLIKA:"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="207dp"
        android:layout_height="203dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/add_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/Category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Odaberi kategoriju"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/description"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Dodaj opis"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Picture"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add_event"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="152dp"
        android:text="DODAJ DOGAĐAJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>