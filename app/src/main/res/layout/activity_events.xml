<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tplava"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/levo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/desno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/strelica"
        android:translationZ="20dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barproba"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.3"
        android:background="#98CBC2"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/banner_event"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:text="Događaj"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Location"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/zaedit"
        android:textSize="24sp"
        android:textColor="@color/bijela"
        android:textColorHint="#70FFFFFF"
        android:ems="10"
        android:hint="Upisi lokaciju"
        android:inputType="textPostalAddress"
        android:padding="10dp"

        app:layout_constraintBottom_toTopOf="@+id/Date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/levo"
        app:layout_constraintRight_toRightOf="@id/desno"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/zaedit"
        android:ems="10"
        android:hint="Upisi datum"
        android:padding="10dp"
        android:textColor="@color/bijela"
        android:textColorHint="#70FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Category"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/levo"
        app:layout_constraintRight_toRightOf="@id/desno"
        app:layout_constraintTop_toBottomOf="@+id/Location"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Picture"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="SLIKA"
        android:background="@color/svjplava"
        android:textSize="24sp"
        android:textColor="#70000000"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/add_event"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/levo"
        app:layout_constraintRight_toRightOf="@id/desno"
        app:layout_constraintTop_toBottomOf="@+id/Category"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="207dp"
        android:layout_height="203dp"
        android:clickable="true"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/levo"
        app:layout_constraintRight_toRightOf="@id/desno"
        app:layout_constraintTop_toBottomOf="@+id/add_event"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/Category"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:alpha="0.8"
        android:hint="Odaberi kategoriju"
        app:layout_constraintBottom_toTopOf="@+id/Picture"
        android:background="@color/svjplava"
        android:textSize="24sp"
        android:textColor="@color/bijela"
        android:textColorHint="#70FFFFFF"
        app:layout_constraintLeft_toLeftOf="@id/levo"
        app:layout_constraintRight_toRightOf="@id/desno"
        app:layout_constraintTop_toBottomOf="@+id/Date"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:ems="10"
        android:hint="Dodaj opis"
        android:inputType="text"
        android:background="@drawable/zaedit"
        android:textSize="24sp"
        android:textColor="@color/bijela"
        android:textColorHint="#70FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Location"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/levo"
        app:layout_constraintRight_toRightOf="@id/desno"
        app:layout_constraintTop_toBottomOf="@+id/barproba"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add_event"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="DODAJ DOGAĐAJ"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/picture"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/levo"
        app:layout_constraintRight_toRightOf="@id/desno"
        app:layout_constraintTop_toBottomOf="@+id/Picture"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>